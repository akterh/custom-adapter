<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="horizontal" xmlns:app="http://schemas.android.com/apk/res-auto" android:weightSum="2" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="1"
        android:layout_margin="@dimen/margin_16"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_25"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"
        android:id="@+id/number_text_view"/>

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/audio_image_view" android:contentDescription="@string/image_view_desc" app:srcCompat="@drawable/ic_volume"/>

</LinearLayout>